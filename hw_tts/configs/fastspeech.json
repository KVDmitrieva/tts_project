{
  "name": "fastspeech",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "FastSpeech",
    "args": {
      "encoder_params": {
        "num_layers":  4,
        "encoder_dim":  256,
        "encoder_conv1d_filter_size":  1024,
        "encoder_head":  2,
        "dropout": 0.1,
        "max_seq_len":  3000,
        "vocab_size": 300
      },
      "lr_params": {
        "duration_predictor_config": {
          "encoder_dim":  256,
          "duration_predictor_kernel_size":  3,
          "duration_predictor_filter_size":  256,
          "dropout": 0.1
        }
      },
      "decoder_params": {
        "num_layers":  4,
        "decoder_dim":  256,
        "decoder_conv1d_filter_size":  1024,
        "decoder_head":  2,
        "dropout":  0.1,
        "max_seq_len": 3000
      },
      "num_mels": 80
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "mel_dir": "/kaggle/input/ljseech-mels/mels"
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "val",
            "mel_dir": "/kaggle/input/ljseech-mels/mels"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-3,
      "betas": [0.9, 0.98],
      "eps":1e-9
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "metrics": [],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 200,
      "epochs": 2001,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 2000,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "tts_project",
    "len_epoch": 200,
    "grad_norm_clip": 1
  }
}
